---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.cv_pdf %}
      <a
        {% if page.cv_pdf contains '://' %}
          href="{{ page.cv_pdf }}"
        {% else %}
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
        {% endif %}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary"
      >
        Download PDF
      </a>
    {% endif %}
  </header>
  <article>
    {% if page.cv_pdf %}
      <iframe
        {% if page.cv_pdf contains '://' %}
          src="{{ page.cv_pdf }}"
        {% else %}
          src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}"
        {% endif %}
        width="100%"
        height="800px"
        style="border: none;"
      ></iframe>
    {% else %}
      <p>No CV PDF provided.</p>
    {% endif %}
  </article>
</div>